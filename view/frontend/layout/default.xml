                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template"
                   name="dotdigital.email.capture"
                   template="Dotdigitalgroup_Email::tracking/dotdigital_email_capture.phtml">
