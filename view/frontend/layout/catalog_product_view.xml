<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block
                ifconfig="connector_automation/product_notification/enable"
                name="dd.bis"
                template="Dotdigitalgroup_Email::product/back_in_stock.phtml">
                <arguments>
                    <argument name="product_notification" xsi:type="object">Dotdigitalgroup\Email\ViewModel\ProductNotificationView</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template"
                   name="dotdigital.product.capture"
                   template="Dotdigitalgroup_Email::tracking/dotdigital_product_capture.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Dotdigitalgroup\Email\ViewModel\DotdigitalProductCaptureView</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
