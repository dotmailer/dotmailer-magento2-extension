<?xml version="1.0" encoding="UTF-8"?>

<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="ClearDynamicContentPasscode">
        <amOnPage url="{{AdminDynamicContentSettingsPage.url}}" stepKey="amOnDynamicContentSettingsPage"/>
        <scrollTo selector="{{AdminDynamicContentSettingsSection.externalDynamicUrlHead}}" stepKey="scrollToSection"/>
        <conditionalClick stepKey="expandExternalDynamicUrlTab" selector="{{AdminDynamicContentSettingsSection.externalDynamicUrlHead}}" dependentSelector="{{AdminDynamicContentSettingsSection.externalDynamicUrlFieldset}}" visible="false"/>
        <clearField selector="{{AdminDynamicContentSettingsSection.dynamicContentPasscode}}" stepKey="clearPasscode"/>
        <click selector="{{AdminDynamicContentSettingsSection.save}}" stepKey="clickSaveDynamicContentSettingsButton" />
        <waitForPageLoad stepKey="waitForPageLoad"/>
    </actionGroup>
</actionGroups>
